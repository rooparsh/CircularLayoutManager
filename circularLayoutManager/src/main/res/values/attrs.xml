<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RecyclerView">

        <attr name="orientation" format="enum">
            <enum name="vertical" value="1" />
            <enum name="horizontal" value="0" />
        </attr>

        <attr name="gravity" format="enum">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
        </attr>

        <attr name="rotating" format="boolean" />

        <attr name="peekDistance" format="integer" />

        <attr name="radius" format="integer" />

        <attr name="scalingFactor" format="integer">
            <enum name="none" value="0" />
            <enum name="half" value="5" />
            <enum name="full" value="10" />
        </attr>

        <attr name="scaling" format="boolean" />

    </declare-styleable>
</resources>